<!-- 後台導覽列區域開始 -->
<%= render "admin/shared/admin_navbar" %>
<!-- 後台導覽列區域結束 -->

<!-- 麵包屑區域開始 -->
<section class="list_area">
	<div class="container">
		<ul>
			<li>
				<%= link_to admin_products_path do %>
					<i class="fas fa-sort-amount-up"></i>Products
				<% end %>
			</li>
			<li>
				<%= link_to new_admin_product_path do %>
					<i class="fas fa-plus"></i>ADD Product
				<% end %>
			</li>
			<li><a href="#"><i class="fas fa-arrow-circle-down"></i>Export</a></li>
		</ul>
	</div>
</section>
<!-- 麵包屑區域結束 -->

<!-- 訊息條區域開始 -->
<%= render "admin/shared/message" %>
<!-- 訊息條區域結束 -->

<h1>產品後台</h1>
<ul>
  <% @products.each do |product| %>
  <li>
    <%= product.name %>
    <%= link_to 'Edit', edit_admin_product_path(product) %>
    <%= link_to 'Delete', admin_product_path(product), method: :delete, data: {confirm:"Are you sure?"} %>
  </li>
  <% end %>
</ul>
<%= link_to 'New Product', new_admin_product_path %>